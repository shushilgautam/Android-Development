<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E505B"
    android:weightSum="6"
    >

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#170A1C"
        android:textColor="@color/white"
        android:layout_weight="1"

        android:textSize="60dp"
        android:textDirection="rtl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:weightSum="3"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="clr"
            android:textSize="40dp"
            android:id="@+id/btnClr"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/btnOff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Off"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="del"
            android:textSize="40dp"
            android:id="@+id/btnDel"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:weightSum="4"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="40dp"
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="40dp"
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="40dp"
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="4"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="40dp"
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="40dp"
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="40dp"
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="40dp"
            android:id="@+id/btnMul"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="4"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="40dp"
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="40dp"
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="40dp"
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="40dp"
            android:id="@+id/btnMin"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="4"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent
"
            android:text="0"
            android:textSize="40dp"
            android:id="@+id/btn0"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="40dp"
            android:id="@+id/btnDot"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>