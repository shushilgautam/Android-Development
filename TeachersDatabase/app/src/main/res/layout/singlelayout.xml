<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pursian_blue"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/pursian_blue"
            android:id="@+id/teacher_photo"
            android:src="@drawable/teacher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/screenid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/midnight_green"
                android:padding="10dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/screenName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/midnight_green"
                android:padding="10dp"
                android:text="Abhisek Koirala"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screenSemster"
            android:text="sem:2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/midnight_green"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screensub"
            android:textAlignment="center"
            android:text="Microprocssor"
            android:textColor="@color/white"
            android:background="@color/midnight_green"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>